{
  "compilerOptions": {
    "target" : "es6",
    "module": "commonjs",
    "jsx": "react",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "preserveConstEnums": true
  },
  "compileOnSave": false,
  "filesGlob": [
    "server/**/*.ts",
    "server/**/*.tsx",
    "client/**/*.ts",
    "client/**/*.tsx",
    "lib/**/*.ts",
    "lib/**/*.tsx",
    "!typings/**",
    "!node_modules/**"
  ]
}
