{
  "compilerOptions": {
    "jsx": "react",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false
  },
  "compileOnSave": false,
  "filesGlob": [
    "server/**/*.ts",
    "server/**/*.tsx",
    "client/**/*.ts",
    "client/**/*.tsx",
    "shared/**/*.ts",
    "shared/**/*.tsx",
    "!typings/**",
    "!node_modules/**"
  ]
}
